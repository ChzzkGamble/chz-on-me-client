{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV"
  ],
  "globalDependencies": [
    ".env",
    ".env.*"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "NODE_ENV",
        ".env"
      ]
    },
    "prepare": {
      "dependsOn": [
        "^prepare"
      ]
    },
    "storybook": {
      "dependsOn": [
        "^storybook"
      ],
      "outputs": [
        "styled-system/**"
      ]
    }
  }
}